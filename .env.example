# Environment Configuration (Example)
# Copy this file to .env and update with your values

# App Configuration
APP_NAME=Member Management System
APP_VERSION=1.0.0

# API Configuration (for future backend integration)
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000

# Authentication (for future implementation)
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=7d

# Database Configuration (for future implementation)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=member_management
DB_USER=admin
DB_PASSWORD=password

# Storage
STORAGE_TYPE=asyncstorage
# Options: asyncstorage, api, hybrid

# Features Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PHOTO_UPLOAD=false
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Demo Mode
DEMO_MODE=true
DEMO_DATA_COUNT=2

# Admin Credentials (Demo - Change in production!)
DEMO_ADMIN_USERNAME=admin
DEMO_ADMIN_PASSWORD=admin123

# User Credentials (Demo - Change in production!)
DEMO_USER_USERNAME=user
DEMO_USER_PASSWORD=user123

# UI Configuration
THEME_PRIMARY_COLOR=#4CAF50
THEME_SECONDARY_COLOR=#2196F3
THEME_DANGER_COLOR=#F44336
THEME_WARNING_COLOR=#FF9800

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Validation
MIN_PASSWORD_LENGTH=6
MAX_MOBILE_LENGTH=15
REQUIRE_EMAIL=false

# Logging
LOG_LEVEL=info
# Options: debug, info, warn, error

# Note: This is a template file
# Actual .env file should never be committed to version control
